{
  "name": "www.xyfir.com",
  "version": "2.9.3",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js && npm run build:favicons && npm run build:images",
    "build:js": "webpack-cli",
    "build:css": "npm run build:css:app && npm run build:css:xss && npm run build:css:blog",
    "build:css:app": "node-sass client/styles/app.scss static/css/app.css --output-style compressed",
    "build:css:xss": "node-sass client/styles/xss.scss static/css/xss.css --output-style compressed",
    "build:css:blog": "node -e \"require('fs-extra').copy('node_modules/@xyfir/blog/dist/blog.css', 'static/css/blog.css', console.log)\"",
    "build:images": "node -e \"require('fs-extra').copy('res/images', 'static/images', console.log)\"",
    "build:favicons": "node favicons"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Xyfir/www"
  },
  "author": "Xyfir",
  "license": "MIT",
  "homepage": "https://www.xyfir.com",
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@xyfir/blog": "^0.2.1",
    "app-module-path": "^2.2.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "fs-extra": "^7.0.0",
    "github-markdown-css": "^2.10.0",
    "mailgun-js": "^0.20.0",
    "marked": "^0.5.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-md": "^1.5.1",
    "superagent": "^3.8.3",
    "xyfir-ads": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.2",
    "compression-webpack-plugin": "^2.0.0",
    "favicons": "^5.1.1",
    "node-sass": "^4.9.3",
    "prettier": "^1.14.2",
    "webpack": "^4.17.2"
  }
}
